extends ../shared/template

block content

  form#up(method='POST', action='/priorities')
    input(type='text', name='name', placeholder='Name', autofocus=true)
    input(type='color', name='color')
    button Add



  table
    thead
      tr
        th Name
        th Color
        th Delete
    tbody
      each priority in priorities
        tr(style='background-color: #{priority.color}')
          td= priority.name
          td= priority.color
          td
            form#bottom(method='POST', action='/priorities/#{priority._id}')
              input(type='hidden', name='_method', value='DELETE')
              button X
